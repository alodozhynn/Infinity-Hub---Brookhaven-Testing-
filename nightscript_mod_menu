-- Fun칞칚o de voo
local uis = game:GetService("UserInputService")
local rs = game:GetService("RunService")

local myPlayer = game.Players.LocalPlayer
local myChar = myPlayer.Character
local myHRP = myChar:WaitForChild("HumanoidRootPart")
local camera = game.Workspace.CurrentCamera

local flying = false
local speed = 0.5

local bp = Instance.new("BodyPosition", myHRP)
bp.MaxForce = Vector3.new()
bp.D = 10
bp.P = 10000

local bg = Instance.new("BodyGyro", myHRP)
bg.MaxTorque = Vector3.new()
bg.D = 10

function fly()
    flying = true
    bp.MaxForce = Vector3.new(400000, 400000, 400000)
    bg.MaxTorque = Vector3.new(400000, 400000, 400000)
    while flying do
        rs.RenderStepped:wait()
        bp.Position = myHRP.Position + ((myHRP.Position - camera.CFrame.p).unit * speed)
        bg.CFrame = CFrame.new(camera.CFrame.p, myHRP.Position)
    end
end

function endFlying()
    bp.MaxForce = Vector3.new()
    bg.MaxTorque = Vector3.new()
    flying = false
end

uis.InputBegan:connect(function(input)
    if input.KeyCode == Enum.KeyCode.Space then
        if not flying then
            fly()
        else
            endFlying()
        end
    end
end)

-- Fun칞칚o para teleportar jogador e matar jogador
local function teleportAndKillPlayer(targetPlayer)
    local targetHRP = targetPlayer.Character:WaitForChild("HumanoidRootPart")
    myHRP.CFrame = CFrame.new(-83, 19, -130)
    wait(1)  -- Esperar um segundo para garantir que o teleporte inicial foi conclu칤do
    local connection
    connection = game:GetService("RunService").Stepped:Connect(function()
        myHRP.CFrame = targetHRP.CFrame
        -- Verifique se o jogador alvo est치 sentado
        if targetPlayer.Character and targetPlayer.Character:FindFirstChild("Humanoid") and targetPlayer.Character.Humanoid.Sit then
            -- Jogador alvo est치 sentado, pare de teletransportar
            myHRP.CFrame = CFrame.new(500000, 0, 0)
            connection:Disconnect()
        end
    end)
end

-- Lista de jogadores para selecionar
local players = game.Players:GetPlayers()
local selectedPlayer

local dropdownOptions = {}
for i, player in ipairs(players) do
    table.insert(dropdownOptions, player.Name)
end

-- Adiciona a nova se칞칚o "Trollar jogadores"
mainTab:AddSection({
    Name = "Trollar jogadores"
})

mainTab:AddDropdown({
    Name = "Selecionar Jogador",
    Default = "",
    Options = dropdownOptions,
    Callback = function(value)
        selectedPlayer = game.Players:FindFirstChild(value)
    end
})

mainTab:AddButton({
    Name = "Matar Jogador [precisa de um equipamento]",
    Callback = function()
        if selectedPlayer then
            teleportAndKillPlayer(selectedPlayer)
        else
            print("Nenhum jogador selecionado.")
        end
    end    
})

mainTab:AddButton({
    Name = "Puxar Jogador, nao funciona ainda",
    Callback = function()
        myHRP.CFrame = CFrame.new(0, 0, 0)
    end    
})
-- Vari치vel global para controle de sentar
local allowSitting = true

-- Fun칞칚o para prevenir que os jogadores se sentem
local function preventSitting()
    local function onCharacterAdded(character)
        local humanoid = character:WaitForChild("Humanoid")
        humanoid.Seated:Connect(function(_, seated)
            if not allowSitting then
                humanoid.Sit = false
            end
        end)
    end

    game.Players.PlayerAdded:Connect(function(player)
        player.CharacterAdded:Connect(onCharacterAdded)
        if player.Character then
            onCharacterAdded(player.Character)
        end
    end)
end

-- Fun칞칚o para permitir que os jogadores se sentem novamente
local function allowSittingAgain()
    allowSitting = true
end



-- Adiciona o bot칚o para impedir o jogador de se sentar
mainTab:AddButton({
    Name = "N칚o se sentar em lugares e itens",
    Callback = function()
        allowSitting = false
        preventSitting()
        print("Fun칞칚o de impedir sentar ativada.")
    end    
})

-- Adiciona o bot칚o para permitir o jogador se sentar novamente
mainTab:AddButton({
    Name = "Voltar a se sentar nos lugares e itens",
    Callback = function()
        allowSitting = true
        print("Agora 칠 poss칤vel se sentar em lugares e itens.")
    end    
})

-- Inicializa a fun칞칚o para prevenir sentar
preventSitting()
